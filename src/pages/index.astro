import Layout from '../components/Layout.astro';

// Get all markdown files from content directory
const cssFiles = await Astro.glob('../content/css/*.mdx');
const jsFiles = await Astro.glob('../content/javascript/*.mdx');

const createNavItems = (files: any[], section: string, sectionIcon: string) => {
  return files
    .filter((file: any) => !file.url?.includes('index'))
    .map((file: any) => ({
      title: file.frontmatter?.title || file.url?.split('/').pop()?.replace('.mdx', '') || 'Untitled',
      slug: file.frontmatter?.slug || file.url?.split('/').pop()?.replace('.mdx', '') || 'untitled',
      description: file.frontmatter?.description || '',
      section: section,
      sectionIcon: sectionIcon
    }))
    .sort((a: any, b: any) => a.title.localeCompare(b.title));
};

const cssItems = createNavItems(cssFiles, 'CSS', 'üé®');
const jsItems = createNavItems(jsFiles, 'JavaScript', '‚ö°');
const navigationItems = [...cssItems, ...jsItems];

const sections = [
  { name: 'CSS', icon: 'üé®', items: cssItems },
  { name: 'JavaScript', icon: '‚ö°', items: jsItems }
];
